{
  "name": "rag-search-frontend",
  "version": "1.0.0",
  "description": "Frontend for RAG Document Search Application",
  "main": "public/index.html",
  "scripts": {
    "start": "npx http-server public -p 3000 -c-1",
    "dev": "npx http-server public -p 3000 -c-1 --cors",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx cleancss -o public/css/style.min.css public/css/*.css",
    "minify-js": "npx terser public/js/*.js -o public/js/app.min.js --source-map",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "npx eslint public/js/*.js",
    "format": "npx prettier --write public/**/*.{html,css,js}",
    "serve": "npx serve public -p 3000",
    "watch": "npx nodemon --watch public --exec \"npm run dev\"",
    "deploy": "npm run build && npm run upload",
    "upload": "echo \"Add your deployment script here\""
  },
  "keywords": [
    "rag",
    "search",
    "documents",
    "ai",
    "frontend",
    "javascript",
    "html",
    "css"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.4",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "http-server": "^14.1.1",
    "serve": "^14.2.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/xduannex/RAG.git"
  },
  "bugs": {
    "url": "https://github.com/xduannex/RAG/issues"
  },
  "homepage": "https://github.com/xduannex/RAG#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}